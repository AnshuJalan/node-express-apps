<%- include partials/header.ejs %>

<h1>Home</h1>
<p><%= content %></p>

<% thePosts.forEach(function(item){ %>
    <h1><%= item.title %></h1>
    <% if(item.content.length > 100){ %>
    <p><%= item.content.substring(0, 100) + "..." %><span><a href=<%= item.link %>>read more</a></span></p>
    <% }else{ %>
        <p><%= item.content %></p>
    <% } }); %>

