<%- include header.ejs %>

    <div class="box" id="heading">
        <h1><%= listTitle %></h1>
    </div>

    <div class="box">

        <% for(var i = 0; i < items.length; i++) { %>
        <div class="item">
            <input type="checkbox">
            <p><%= items[i] %></p>
        </div>
        <% } %>

        <form action="/" method="POST">
            <input name="todoItem" type="text" placeholder="Enter a to-do.." autocomplete="off">
            <button type="submit" name="submit" value=<%= listTitle %>>+</button>
        </form>

    </div>

<%- include footer.ejs %>